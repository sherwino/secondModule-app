<h2> Log In </h2>

<% if (errorMessage) { %>
  <p class="error-message">
    <%= errorMessage %>
  </p>
  <% } %>

    <form action="/login" method="post" enctype="X-www-form-urlencoded">
      <div class="input-group input-group-sm">
        <label for="email-input"> Email </label>
        <input class="form-control" type="email" name="email" id="email-input" placeholder="e.g., xena@warrior.company">
      </div>
      <br>

      <div class="input-group input-group-sm">
        <label for="password-input"> Password </label>
        <input class="form-control" type="password" name="password" id="password-input" placeholder="e.g., *****">
      </div>
      <br>

      <button> Log In </button>
    </form>

    <br>
    <a href="/auth/facebook"> Log in w/FB </a>

    <p>OR</p>

    <a href="/auth/google"> Log in w/Google </a>

    <br>
    <p>Don't have an account?
      <a href="/signup">Create an account.</a>
    </p>
